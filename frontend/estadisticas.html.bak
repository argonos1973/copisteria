                <div class="stats-content">
                    <div class="stats-row">
                        <div class="stats-label">Total Año Actual</div>
                        <div class="stats-value" id="ticketsTotal">0,00 €</div>
                        <div class="stats-comparison">
                            <span class="stats-percentage" id="ticketsPorcentaje">0%</span>
                            <span class="stats-previous" id="ticketsAnterior">Año anterior: 0,00 €</span>
                        </div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">Total Mes Actual</div>
                        <div class="stats-value" id="ticketsTotalMes">0,00 €</div>
                        <div class="stats-comparison">
                            <span class="stats-percentage" id="ticketsPorcentajeMes">0%</span>
                            <span class="stats-previous" id="ticketsMesAnterior">Mismo mes año anterior: 0,00 €</span>
                        </div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">Media por Ticket</div>
                        <div class="stats-value" id="ticketsMedia">0,00 €</div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">Media Mensual</div>
                        <div class="stats-value" id="ticketsMediaMensual">0,00 €</div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">% Falta para Media Mensual</div>
                        <div class="stats-value" id="ticketsFaltaMediaMensual">0%</div>
                        <div class="stats-comparison">
                            <span class="stats-percentage" id="ticketsPorcentajeFalta">0%</span>
                        </div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">Cantidad</div>
                        <div class="stats-value" id="ticketsCantidad">0</div>
                    </div>
                </div>
            </div>

            <!-- Estadísticas de Facturas -->
            <div class="stats-card" id="card-facturas">
                <h3>Facturas</h3>
                <div class="stats-content">
                    <div class="stats-row">
                        <div class="stats-label">Total Año Actual</div>
                        <div class="stats-value" id="facturasTotal">0,00 €</div>
                        <div class="stats-comparison">
                            <span class="stats-percentage" id="facturasPorcentaje">0%</span>
                            <span class="stats-previous" id="facturasAnterior">Año anterior: 0,00 €</span>
                        </div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">Total Mes Actual</div>
                        <div class="stats-value" id="facturasTotalMes">0,00 €</div>
                        <div class="stats-comparison">
                            <span class="stats-percentage" id="facturasPorcentajeMes">0%</span>
                            <span class="stats-previous" id="facturasMesAnterior">Mismo mes año anterior: 0,00 €</span>
                        </div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">Media por Factura</div>
                        <div class="stats-value" id="facturasMedia">0,00 €</div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">Media Mensual</div>
                        <div class="stats-value" id="facturasMediaMensual">0,00 €</div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">% Falta para Media Mensual</div>
                        <div class="stats-value" id="facturasFaltaMediaMensual">0%</div>
                        <div class="stats-comparison">
                            <span class="stats-percentage" id="facturasPorcentajeFalta">0%</span>
                        </div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">Cantidad</div>
                        <div class="stats-value" id="facturasCantidad">0</div>
                    </div>
                </div>
            </div>

            <!-- Estadísticas de Proformas -->
            <div class="stats-card">
                <h3>Proformas</h3>
                <div class="stats-content">
                    <div class="stats-row">
                        <div class="stats-label">Total Año Actual</div>
                        <div class="stats-value" id="proformasTotal">0,00 €</div>
                        <div class="stats-comparison">
                            <span class="stats-percentage" id="proformasPorcentaje">0%</span>
                            <span class="stats-previous" id="proformasAnterior">Año anterior: 0,00 €</span>
                        </div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">Media por Proforma</div>
                        <div class="stats-value" id="proformasMedia">0,00 €</div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">Media Mensual</div>
                        <div class="stats-value" id="proformasMediaMensual">0,00 €</div>
                    </div>
                    <div class="stats-row">
                        <div class="stats-label">% Falta para Media Mensual</div>
                        <div class="stats-value" id="proformasFaltaMediaMensual">0%</div>
