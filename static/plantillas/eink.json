{
  "name": "EInk",
  "version": 2,
  "meta": {
    "author": "aleph70",
    "icon": "ðŸ“–",
    "dark": false,
    "description": "Inspirado en lectores e-Ink: alto contraste, mÃ¡xima legibilidad"
  },
  "palette": {
    "black": "#0b0b0b",
    "white": "#f4f1e6",
    "gray50": "#f4f1e6",
    "gray100": "#f0f0f0",
    "gray200": "#e6e2d6",
    "gray300": "#c9c4b6",
    "gray400": "#6b6b6b",
    "gray500": "#3a3a3a",
    "gray600": "#2f2f2f",
    "gray700": "#1f1f1f",
    "gray800": "#1f2937",
    "green700": "#1b5e20",
    "red700": "#b71c1c"
  },
  "semantic": {
    "bg": "{palette.gray50}",
    "bg-elevated": "{palette.gray100}",
    "text": "{palette.black}",
    "text-muted": "{palette.gray500}",
    "primary": "{palette.black}",
    "success": "{palette.gray600}",
    "warning": "{palette.gray800}",
    "danger": "{palette.black}",
    "info": "{palette.gray500}",
    "border": "{palette.gray300}"
  },
  "components": {
    "button": {
      "bg": "{semantic.primary}",
      "text": "{palette.white}",
      "hover-bg": "{palette.gray700}",
      "border": "{semantic.primary}"
    },
    "input": {
      "bg": "{palette.white}",
      "text": "{semantic.text}",
      "border": "{semantic.border}",
      "placeholder": "{semantic.text-muted}"
    },
    "select": {
      "bg": "{palette.white}",
      "text": "{semantic.text}",
      "border": "{semantic.border}"
    },
    "modal": {
      "bg": "{palette.white}",
      "text": "{semantic.text}",
      "overlay": "#0000009a",
      "border": "{palette.black}",
      "border-width": "2px",
      "border-radius": "8px",
      "shadow": "0 8px 24px #00000033",
      "header-bg": "{palette.gray200}",
      "header-text": "{palette.black}",
      "body-bg": "{palette.white}",
      "body-text": "{semantic.text}",
      "label-color": "{palette.black}",
      "input-bg": "{palette.white}",
      "input-text": "{semantic.text}",
      "input-border": "{semantic.border}"
    },
    "button-secondary": {
      "bg": "{palette.gray200}",
      "text": "{palette.black}",
      "hover-bg": "{palette.gray300}",
      "border": "{semantic.border}"
    },
    "table": {
      "bg": "{palette.white}",
      "text": "{semantic.text}",
      "header-bg": "{palette.gray200}",
      "header-text": "{semantic.text}",
      "row-hover": "{palette.gray100}"
    },
    "menu": {
      "bg": "{semantic.bg-elevated}",
      "text": "{semantic.text}",
      "hover": "{palette.gray200}",
      "submenu-bg": "{semantic.bg-elevated}"
    },
    "header": {
      "bg": "{semantic.bg-elevated}",
      "text": "{semantic.text}"
    },
    "icon": {
      "color": "{semantic.text}"
    },
    "spinner": {
      "border": "{semantic.primary}"
    },
    "tab": {
      "active-bg": "{semantic.primary}",
      "active-text": "{palette.white}"
    },
    "disabled": {
      "bg": "{palette.gray100}",
      "text": "{palette.gray400}"
    },
    "amount": {
      "positive": "{palette.green700}",
      "negative": "{palette.red700}"
    }
  }
}