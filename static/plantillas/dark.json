{
  "name": "Dark Linux",
  "version": 1,
  "meta": {
    "author": "aleph70",
    "icon": "",
    "dark": true,
    "description": "Oscuro estilo Linux (Adwaita/Mint-Y), alto contraste, acento azul GNOME"
  },
  "palette": {
    "base900": "#1e1e1e",
    "base800": "#242424",
    "base700": "#2f3136",
    "base600": "#3a3a3a",
    "base500": "#4f4f4f",
    "base300": "#9aa0a6",
    "base100": "#e6e6e6",
    "white": "#ffffff",
    "blue500": "#3584e4",
    "blue600": "#1c71d8",
    "green500": "#57e389",
    "yellow500": "#f8e45c",
    "red500": "#ff7b63"
  },
  "semantic": {
    "bg": "{palette.base800}",
    "bg-elevated": "{palette.base800}",
    "text": "{palette.white}",
    "text-muted": "{palette.base300}",
    "primary": "{palette.blue500}",
    "success": "{palette.green500}",
    "warning": "{palette.yellow500}",
    "danger": "{palette.red500}",
    "info": "{palette.blue500}",
    "border": "{palette.base600}",
    "focus-ring": "#63adff99"
  },
  "components": {
    "button": {
      "bg": "{semantic.primary}",
      "text": "{palette.white}",
      "hover-bg": "{palette.blue600}",
      "border": "transparent"
    },
    "button-secondary": {
      "bg": "{palette.base700}",
      "text": "{palette.white}",
      "hover-bg": "{palette.base600}",
      "border": "{semantic.border}"
    },
    "input": {
      "bg": "{palette.base700}",
      "text": "{palette.white}",
      "border": "{semantic.border}",
      "placeholder": "{semantic.text-muted}",
      "focus-ring": "{semantic.focus-ring}"
    },
    "select": {
      "bg": "{palette.base700}",
      "text": "{palette.white}",
      "border": "{semantic.border}",
      "focus-ring": "{semantic.focus-ring}"
    },
    "modal": {
      "bg": "{semantic.bg-elevated}",
      "text": "{semantic.text}",
      "overlay": "#000000b3",
      "border": "{palette.white}",
      "border-width": "2px",
      "border-radius": "8px",
      "shadow": "0 8px 24px #00000073",
      "header-bg": "{palette.base700}",
      "header-text": "{palette.white}",
      "body-bg": "{semantic.bg-elevated}",
      "body-text": "{semantic.text}",
      "label-color": "{palette.white}",
      "input-bg": "{palette.base700}",
      "input-text": "{palette.white}",
      "input-border": "{semantic.border}"
    },
    "table": {
      "bg": "{semantic.bg}",
      "text": "{palette.white}",
      "header-bg": "{palette.base700}",
      "header-text": "{palette.white}",
      "row-hover": "{palette.base700}",
      "border": "{semantic.border}"
    },
    "menu": {
      "bg": "{semantic.bg-elevated}",
      "text": "{semantic.text}",
      "hover": "{palette.base700}",
      "border": "{semantic.border}",
      "submenu-bg": "{semantic.bg-elevated}"
    },
    "header": {
      "bg": "{semantic.bg-elevated}",
      "text": "{semantic.text}",
      "border": "{semantic.border}"
    },
    "icon": {
      "color": "{semantic.text}"
    },
    "spinner": {
      "border": "{semantic.primary}"
    },
    "tab": {
      "active-bg": "{palette.base700}",
      "active-text": "{palette.white}"
    },
    "disabled": {
      "bg": "{palette.base800}",
      "text": "{semantic.text-muted}"
    }
  }
}
